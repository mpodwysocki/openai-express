{
  "compilerOptions": {
    "outDir": "./dist-esm",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "inlineSources": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "."
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.mts"]
}
